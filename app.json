{
  "expo": {
    "name": "Zilt Chat",
    "slug": "zilt-chat",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ziltchat",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ziltchat.app",
      "backgroundColor": "#553636"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#553636",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": ["android.permission.RECORD_AUDIO"],
      "package": "com.ziltchat.app",
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "ziltchat.app"
            },
            {
              "scheme": "ziltchat"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "resizeMode": "contain",
          "backgroundColor": "#553636",
          "dark": {
            "image": "./assets/images/icon.png",
            "resizeMode": "contain",
            "backgroundColor": "#553636"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-sqlite",
        {
          "enableFTS": true,
          "useSQLCipher": true,
          "android": {
            // Override the shared configuration for Android
            "enableFTS": false,
            "useSQLCipher": false
          },
          "ios": {
            // You can also override the shared configurations for iOS
            "customBuildFlags": [
              "-DSQLITE_ENABLE_DBSTAT_VTAB=1 -DSQLITE_ENABLE_SNAPSHOT=1"
            ]
          }
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "node_modules/@expo-google-fonts/itim/400Regular/Itim_400Regular.ttf",
            "node_modules/@expo-google-fonts/roboto/400Regular/Roboto_400Regular.ttf",
            "node_modules/@expo-google-fonts/roboto/500Medium/Roboto_500Medium.ttf",
            "node_modules/@expo-google-fonts/roboto/600SemiBold/Roboto_600SemiBold.ttf",
            "node_modules/@expo-google-fonts/roboto/700Bold/Roboto_700Bold.ttf",
            "node_modules/@expo-google-fonts/roboto/800ExtraBold/Roboto_800ExtraBold.ttf"
          ]
        }
      ],
      "expo-asset",
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "a68470f1-e26c-4652-adb3-19e1f8b6e52d"
      }
    }
  }
}
